{
	"{{chrome}}.manifest_version": 3,
	"{{firefox}}.manifest_version": 2,
	"icons": {
		"16": "icon/16.png",
		"32": "icon/32.png",
		"48": "icon/48.png",
		"96": "icon/96.png",
		"128": "icon/128.png"
	},
	"{{chrome}}.action": {
		"default_title": "Open Website Content Lister"
	},
	"{{firefox}}.browser_action": {
		"default_title": "Open Website Content Lister"
	},
	"{{chrome}}.side_panel": {
		"default_path": "src/sidepanel.html"
	},
	"{{firefox}}.sidebar_action": {
		"default_panel": "src/sidepanel.html",
		"default_title": "Website Content Lister"
	},
	"background": {
		"{{chrome}}.service_worker": "src/background.ts",
		"{{firefox}}.scripts": ["src/background.ts"]
	},
	"{{chrome}}.permissions": ["sidePanel", "activeTab", "scripting", "tabs"],
	"{{firefox}}.permissions": ["tabs", "activeTab"],
	"host_permissions": ["<all_urls>"]
}
